<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.shadow.remoteloggerclient" >

    <!-- Internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".RemoteLoggerClientApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="AA_DB_NAME"
            android:value="remote_logger.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.HomeActivity"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".views.ServerRegister"
            android:label="@string/title_activity_server_register"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".views.ServerDetails"
            android:label="@string/title_activity_server_details"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".views.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
    </application>

</manifest>
